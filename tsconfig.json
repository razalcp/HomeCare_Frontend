{
  "compilerOptions": {
    "target": "ESNext",                          // Set the JavaScript version
    "module": "ESNext",                          // Use ES modules
    "jsx": "react-jsx",                          // JSX support for React
    "strict": true,                              // Enable strict type-checking
    "esModuleInterop": true,                     // Allow default imports
    "skipLibCheck": true,                        // Skip type-checking for libraries
    "moduleResolution": "node",                 // Use Node.js module resolution
    "baseUrl": "./",                             // Base directory for imports
    "paths": {
      "@components/*": ["src/components/*"]     // Define path aliases
    },
    "outDir": "./dist",                          // Output folder
    "sourceMap": true                            // Generate source maps
  },
  "include": ["src/**/*"],                       // Include all source files
  "exclude": ["node_modules", "dist"]            // Exclude these folders
}
